<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="20251023083000-1" author="jhipster">
        <createTable tableName="customer">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="last_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="jhi_user_id" type="bigint"/>
        </createTable>

        <addForeignKeyConstraint
            baseTableName="customer"
            baseColumnNames="jhi_user_id"
            constraintName="fk_customer_user"
            referencedTableName="jhi_user"
            referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="20251023083000-1-data" author="jhipster" context="faker">
        <loadData
            file="config/liquibase/fake-data/customer.csv"
            separator=";"
            tableName="customer"
            usePreparedStatements="true">
            <column name="id" type="numeric"/>
            <column name="first_name" type="string"/>
            <column name="last_name" type="string"/>
            <column name="jhi_user_id" type="numeric"/>
        </loadData>
    </changeSet>
</databaseChangeLog>